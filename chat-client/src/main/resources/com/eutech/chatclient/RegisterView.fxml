<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="com.eutech.chatclient.controller.RegisterController">
    <Text style="-fx-font-size: 24px;" text="Register for Chat App" />

    <TextField fx:id="usernameField" prefWidth="200" promptText="Enter Username" />
    <PasswordField fx:id="passwordField" prefWidth="200" promptText="Enter Password" />
   <TextField fx:id="emailField" layoutX="10.0" layoutY="53.0" prefWidth="200" promptText="Enter email address" />
   <TextField fx:id="phoneField" layoutX="10.0" layoutY="131.0" prefWidth="200" promptText="Enter Phone Number" />

    <Button fx:id="registerButton" onAction="#registerButtonOnAction" prefWidth="200" text="Register" />
    <Button fx:id="loginButton" onAction="#loginOnAction" prefWidth="200" text="Already have an account? Login" />

    <Text fx:id="errorMessage" style="-fx-text-fill: red;" />
</VBox>
